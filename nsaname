#!/usr/bin/env bash

help_page() {
	echo "$0 [options]"
	echo "  --help           Show this help page."
	echo "  -l, --lowercase  Output in lowercase."
	echo "  -m, --no-suffix  Don't add a suffix."
	echo "  -h, --hostname   Output a sensible hostname."
	exit "$1"
}

unset LOWERCASE NOSUFFIX HOSTNAME first second suffixes random_first random_second random_suffix seperator
for i in "$@"
do
	case $i in
		-l|--lowercase) LOWERCASE=1 ;;
		-m|--no-suffix) NOSUFFIX=1 ;;
		-h|--hostname) HOSTNAME=1 ;;
		--help) help_page 0 ;;
		*) help_page 1 ;;
	esac
done


	'HX' 'I' 'II' 'III' '2000' '4000' '9000' 'Hx9' '2.0' '3.0' 'A'
)

random_first=${first[$((RANDOM % ${#first[@]}))]}
random_second=${second[$((RANDOM % ${#second[@]}))]}
{ [ -z $NOSUFFIX ] && [ -z $HOSTNAME ]; } && random_suffix=${suffixes[$((RANDOM % ${#suffixes[@]}))]}
[ -z $HOSTNAME ] && seperator='' || seperator='-'
is_lowercase() { { [ -z $HOSTNAME ] && [ -z $LOWERCASE ]; } && echo -n "${1}" || echo -n "${1,,}"; }
is_lowercase "${random_first}"; echo -n "${seperator}"; is_lowercase "${random_second}"; 
[ -n "$random_suffix" ] && is_lowercase " ${random_suffix}"; echo
